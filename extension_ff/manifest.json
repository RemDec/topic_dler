{

    "manifest_version": 2,
    "name": "Topic_dler",
    "version": "1.0",

    "description": "Mineur de ressources intelligent et automatisé pour les topics des forums jeuxvideo.com : images, vidéos webm, vocaroos, etc., centralisé sur un serveur dédié",
    "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
    },

    "permissions": [
    "activeTab"
    ],

    "browser_action": {
    "default_icon": "icons/icon-32.png",
    "default_title": "Topic_dler",
    "default_popup": "src/popup/popup.html"
    },


    "web_accessible_resources": [
        "data/fond_popup.png"
    ],  
    
    "background": {
        "scripts": ["src/background/script_bg.js"]
    }

    
}
